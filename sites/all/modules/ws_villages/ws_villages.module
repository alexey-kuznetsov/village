                    <li><a href="#">Коммуникации</a></li>
                    <li><a href="#">Документы</a></li>
                </ul>
            </nav>
        </div>';
//right pane
	$output .= '  <div class="v-grid-template__content">
            <div class="v-grid-template__wrap">';
			$crumb = drupal_get_breadcrumb();
	$output .= '<nav class="village-nav">
