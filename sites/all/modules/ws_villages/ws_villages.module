 */
function ws_villages_menu(){
	$items = array();
	$items['villagelist'] = array(
		'title' => 'Деревни',
		'type' => MENU_NORMAL_ITEM,
		'page callback' => 'ws_villages_page',
		'access arguments' => array('access content'),
	);
